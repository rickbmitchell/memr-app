<div id="edit-profile-wrapper">

<div id="nav">
<%= link_to image_tag("logo-2.png", :class => "nav-home"), root_path %><%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "nav-logout" %>
</div>

<div id="profile-forms">
   <h2>Edit Your Profile</h2>
   <%= form_for @profile, :html => { :multipart => true } do |f| %>
   <%= f.label :username, "Username" %>
   <%= f.text_field :username %><br>
   <%= f.label :fname, "First Name" %>
   <%= f.text_field :fname %><br>
   <%= f.label :lname, "Last Name" %>
   <%= f.text_field :lname %><br>
   <%= f.label :location, "Location" %>
   <%= f.text_field :location %><br>
   <%= f.label :avatar, "Profile Photo" %>
   <%= f.file_field :avatar %><br><br>
   <%= f.submit :update, :class => "form-button" %>
   <% end %>
</div>